<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include( './component/header.ejs' ) %>

    <div class="container mt-5">
        <form action="/post/add" method="POST" enctype="multipart/form-data" id="postForm">
            <div class="form-group">
              <label>제목</label>
              <input type="text" class="form-control" name="subject">
            </div>
            <div class="form-group">
              <label>내용</label>
              <input type="text" class="form-control" name="content">
            </div>
            <div class="form-group">
                <input type="file" name="FileName">
            </div>
            <input type="hidden" name="addDate" id="addDate" readonly>
            <button type="button" class="btn btn-primary" onclick="submitBtn()">작성</button>
        </form>
    </div>
    <script>
        const submitBtn = () => {
            const currentDate = new Date();
            const currentDateDetail = `${ currentDate.getFullYear() }.${ currentDate.getMonth() + 1 }.${ currentDate.getDate() } ${ currentDate.getHours() }:${ currentDate.getMinutes() }:${ currentDate.getSeconds() }`
            $( "#addDate" ).val( currentDateDetail );
            $( "#postForm" ).submit();
        }
    </script>
</body>
</html>